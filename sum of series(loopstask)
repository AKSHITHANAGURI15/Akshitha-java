import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        int s1=0,temp=2;
        Scanner s=new Scanner(System.in);
        int n=s.nextInt();
        for(int i=1;i<=n;i++)
        {
            s1=s1+temp;
            temp=temp*10+2;
        }
        System.out.println(s1);
      
    }
}
